{
  "name": "elaro-enterprise",
  "version": "3.0.0",
  "description": "Elaro - Court-defensible compliance & AI governance platform for Salesforce",
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "test -d platform/node_modules || (cd platform && npm install --ignore-scripts)",
    "preflight": "bash scripts/preflight.sh",
    "fmt": "prettier --write \"force-app/**/*.{js,ts,md,json,yml,yaml,xml}\" \"force-app/**/lwc/**/*.js\" \"./*.{js,json,yml,yaml,md}\"",
    "fmt:check": "prettier --check \"force-app/**/*.{js,ts,md,json,yml,yaml,xml}\" \"force-app/**/lwc/**/*.js\" \"./*.{js,json,yml,yaml,md}\"",
    "lint": "eslint \"force-app/**/*.js\" --max-warnings=3",
    "lint:fix": "eslint \"force-app/**/*.js\" --fix",
    "test": "jest --config jest.config.js --passWithNoTests",
    "test:unit": "jest --config jest.config.js",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --config jest.config.js --coverage",
    "test:a11y": "node scripts/accessibility-audit.js",
    "security-scan": "echo '⚠️  SFDX Scanner not installed, skipping...'",
    "precommit": "npm run preflight && npm run fmt:check && npm run lint && npm run test:unit",
    "validate": "npm run precommit",
    "build": "echo '✅ Elaro build validation complete'",
    "org:create": "sf org create scratch -f config/elaro-scratch-def.json -a elaro-dev -d 30",
    "org:open": "sf org open -o elaro-dev",
    "org:delete": "sf org delete scratch -o elaro-dev -p",
    "sf:deploy": "sf project deploy start -o elaro-dev",
    "sf:deploy:validate": "sf project deploy start -o elaro-dev --dry-run",
    "sf:retrieve": "sf project retrieve start -o elaro-dev",
    "test:apex": "sf apex run test -o elaro-dev -c -r human -w 10",
    "test:all": "npm run test && npm run test:apex",
    "cli:setup": "cd platform && npm install --ignore-scripts && npm run build",
    "cli:build": "npm run cli:setup && cd platform && npm run build -- --filter @platform/cli",
    "cli:install": "npm run cli:build && cd platform/packages/cli && npm link",
    "cli": "elaro"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@eslint/js": "^10.0.1",
    "@lwc/eslint-plugin-lwc": "^3.3.0",
    "@salesforce/eslint-config-lwc": "^4.1.2",
    "@salesforce/sfdx-lwc-jest": "^7.1.2",
    "@testing-library/jest-dom": "^6.9.1",
    "axe-core": "^4.11.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "overrides": {
    "fast-xml-parser": "^5.3.4"
  },
  "lint-staged": {
    "*.{js,ts,html,md,json,yml,yaml,xml}": [
      "prettier --write"
    ],
    "force-app/**/*.js": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/derickporter1993/elaro.git"
  },
  "keywords": [
    "salesforce",
    "compliance",
    "ai-governance",
    "audit",
    "security",
    "elaro"
  ],
  "author": "Elaro Compliance Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
