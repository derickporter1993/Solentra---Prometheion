{
  "name": "ops-guardian",
  "type": "module",
  "private": true,
  "scripts": {
    "fmt": "prettier -w \"**/*.{js,ts,html,md,json,yml,yaml,xml}\"",
    "fmt:check": "prettier -c \"**/*.{js,ts,html,md,json,yml,yaml,xml}\"",
    "lint": "eslint \"force-app/**/*.js\" --max-warnings=0",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,ts,html,md,json,yml,yaml,xml}": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.24.0",
    "@lwc/eslint-plugin-lwc": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  }
}
