{
  "name": "sentinel-enterprise",
  "version": "3.0.0",
  "description": "Sentinel - Court-defensible compliance & AI governance platform for Salesforce",
  "type": "module",
  "private": true,
  "scripts": {
    "fmt": "prettier --write \"force-app/**/*.{js,ts,html,md,json,yml,yaml,xml}\" \"./*.{js,json,yml,yaml,md}\"",
    "fmt:check": "prettier --check \"force-app/**/*.{js,ts,html,md,json,yml,yaml,xml}\" \"./*.{js,json,yml,yaml,md}\"",
    "lint": "eslint \"force-app/**/*.js\" --max-warnings=0",
    "lint:fix": "eslint \"force-app/**/*.js\" --fix",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --config jest.config.js",
    "test:unit:watch": "jest --watch",
    "security-scan": "echo 'âš ï¸  SFDX Scanner not installed, skipping...'",
    "precommit": "npm run fmt:check && npm run lint && npm run test:unit",
    "validate": "npm run precommit",
    "build": "echo 'âœ… Sentinel build validation complete'",
    "deploy": "echo 'ðŸ“¦ Ready for deployment'"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@eslint/js": "^9.0.0",
    "@lwc/eslint-plugin-lwc": "^2.1.0",
    "@salesforce/eslint-config-lwc": "^3.5.3",
    "@salesforce/sfdx-lwc-jest": "^7.1.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "*.{js,ts,html,md,json,yml,yaml,xml}": ["prettier --write"],
    "force-app/**/*.js": ["eslint --fix"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/sentinel-enterprise.git"
  },
  "keywords": ["salesforce", "compliance", "ai-governance", "audit", "security"],
  "author": "Sentinel Compliance Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
