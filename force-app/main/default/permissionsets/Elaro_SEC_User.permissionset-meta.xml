<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Elaro SEC Disclosure User</label>
    <description>Read and execute access to the SEC Cybersecurity Disclosure module. Grants ability to view assessments, workflows, and approval status. Use Elaro SEC Disclosure Admin for full create/edit access.</description>
    <hasActivationRequired>false</hasActivationRequired>

    <objectPermissions>
        <object>Materiality_Assessment__c</object>
        <allowCreate>false</allowCreate>
        <allowRead>true</allowRead>
        <allowEdit>false</allowEdit>
        <allowDelete>false</allowDelete>
        <viewAllRecords>false</viewAllRecords>
        <modifyAllRecords>false</modifyAllRecords>
    </objectPermissions>

    <objectPermissions>
        <object>Disclosure_Workflow__c</object>
        <allowCreate>false</allowCreate>
        <allowRead>true</allowRead>
        <allowEdit>false</allowEdit>
        <allowDelete>false</allowDelete>
        <viewAllRecords>false</viewAllRecords>
        <modifyAllRecords>false</modifyAllRecords>
    </objectPermissions>

    <objectPermissions>
        <object>Incident_Timeline__c</object>
        <allowCreate>false</allowCreate>
        <allowRead>true</allowRead>
        <allowEdit>false</allowEdit>
        <allowDelete>false</allowDelete>
        <viewAllRecords>false</viewAllRecords>
        <modifyAllRecords>false</modifyAllRecords>
    </objectPermissions>

    <objectPermissions>
        <object>Board_Governance_Report__c</object>
        <allowCreate>false</allowCreate>
        <allowRead>true</allowRead>
        <allowEdit>false</allowEdit>
        <allowDelete>false</allowDelete>
        <viewAllRecords>false</viewAllRecords>
        <modifyAllRecords>false</modifyAllRecords>
    </objectPermissions>

    <fieldPermissions>
        <field>Disclosure_Workflow__c.Legal_Approver__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Disclosure_Workflow__c.CFO_Approver__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Disclosure_Workflow__c.CEO_Approver__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Disclosure_Workflow__c.Board_Approver__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Disclosure_Workflow__c.Approval_Comments__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Disclosure_Workflow__c.Submitted_Date__c</field>
        <editable>false</editable>
        <readable>true</readable>
    </fieldPermissions>

    <classAccesses>
        <apexClass>SECDisclosureController</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <tabSettings>
        <tab>SEC_Disclosure_Dashboard</tab>
        <visibility>Visible</visibility>
    </tabSettings>
</PermissionSet>
