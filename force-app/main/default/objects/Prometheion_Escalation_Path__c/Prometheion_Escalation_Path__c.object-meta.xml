<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Prometheion Escalation Path</label>
    <pluralLabel>Prometheion Escalation Paths</pluralLabel>
    <nameField>
        <label>Escalation Path Name</label>
        <type>AutoNumber</type>
        <displayFormat>ESC-{0000}</displayFormat>
    </nameField>
    <deploymentStatus>Deployed</deploymentStatus>
    <sharingModel>ReadWrite</sharingModel>
    <enableActivities>false</enableActivities>
    <enableReports>true</enableReports>
    <enableSearch>true</enableSearch>
    <description>Defines escalation paths for unacknowledged compliance alerts</description>
    <fields>
        <fullName>User__c</fullName>
        <label>Escalation User</label>
        <type>Lookup</type>
        <referenceTo>User</referenceTo>
        <relationshipName>EscalationPaths</relationshipName>
        <required>true</required>
        <description>The user to escalate to at this level</description>
    </fields>
    <fields>
        <fullName>Level__c</fullName>
        <label>Escalation Level</label>
        <type>Number</type>
        <precision>2</precision>
        <scale>0</scale>
        <required>true</required>
        <description>Escalation level (1 = first escalation, 2 = second, 3 = final)</description>
    </fields>
    <fields>
        <fullName>Active__c</fullName>
        <label>Active</label>
        <type>Checkbox</type>
        <defaultValue>true</defaultValue>
        <description>Whether this escalation path is active</description>
    </fields>
    <fields>
        <fullName>Notification_Method__c</fullName>
        <label>Notification Method</label>
        <type>Picklist</type>
        <valueSet>
            <restricted>true</restricted>
            <valueSetDefinition>
                <sorted>false</sorted>
                <value>
                    <fullName>Mobile</fullName>
                    <default>false</default>
                    <label>Mobile Push Only</label>
                </value>
                <value>
                    <fullName>Email</fullName>
                    <default>false</default>
                    <label>Email Only</label>
                </value>
                <value>
                    <fullName>Both</fullName>
                    <default>true</default>
                    <label>Mobile + Email</label>
                </value>
                <value>
                    <fullName>All</fullName>
                    <default>false</default>
                    <label>All Channels</label>
                </value>
            </valueSetDefinition>
        </valueSet>
        <description>How to notify this user during escalation</description>
    </fields>
    <fields>
        <fullName>Role__c</fullName>
        <label>Role</label>
        <type>Text</type>
        <length>100</length>
        <description>Role description (e.g., "Team Lead", "Manager", "CISO")</description>
    </fields>
    <fields>
        <fullName>Escalation_Delay_Minutes__c</fullName>
        <label>Escalation Delay (Minutes)</label>
        <type>Number</type>
        <precision>4</precision>
        <scale>0</scale>
        <defaultValue>15</defaultValue>
        <description>Minutes to wait before escalating to this level</description>
    </fields>
</CustomObject>
