<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Response_Deadline__c</fullName>
    <description>Calculated 45-day deadline for CCPA response. CCPA requires businesses to respond within 45 calendar days, with one 45-day extension available if needed.</description>
    <inlineHelpText>45 days from request date (CCPA requirement)</inlineHelpText>
    <externalId>false</externalId>
    <formula>DATEVALUE(Request_Date__c) + 45</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Response Deadline</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Date</type>
</CustomField>
