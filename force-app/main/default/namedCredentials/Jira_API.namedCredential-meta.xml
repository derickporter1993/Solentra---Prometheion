<?xml version="1.0" encoding="UTF-8"?>
<!--
    CONFIGURATION REQUIRED: Configure your Jira Cloud instance

    To configure Jira API access:
    1. Go to https://id.atlassian.com/manage-profile/security/api-tokens
    2. Create an API token
    3. Replace YOUR_JIRA_INSTANCE with your Jira domain (e.g., mycompany.atlassian.net)
    4. Configure External Credential with:
       - Username: your Jira email
       - Password: your API token

    WARNING: Jira integration will fail until this is configured!
-->
<NamedCredential xmlns="http://soap.sforce.com/2006/04/metadata">
    <allowMergeFieldsInBody>true</allowMergeFieldsInBody>
    <allowMergeFieldsInHeader>true</allowMergeFieldsInHeader>
    <calloutStatus>Enabled</calloutStatus>
    <generateAuthorizationHeader>true</generateAuthorizationHeader>
    <label>Jira API</label>
    <namedCredentialParameters>
        <parameterName>url</parameterName>
        <parameterType>Url</parameterType>
        <!-- PLACEHOLDER: Replace with your Jira instance URL -->
        <parameterValue>https://YOUR_JIRA_INSTANCE.atlassian.net</parameterValue>
    </namedCredentialParameters>
    <namedCredentialParameters>
        <parameterName>authentication</parameterName>
        <parameterType>Authentication</parameterType>
        <parameterValue>Jira_API_Auth</parameterValue>
    </namedCredentialParameters>
    <namedCredentialType>SecuredEndpoint</namedCredentialType>
</NamedCredential>
