    </values>
    <values>
        <field>Severity__c</field>
        <value xsi:type="xsd:string">CRITICAL</value>
    </values>
    <values>
        <field>Detection_Pattern__c</field>
        <value xsi:type="xsd:string">{"auditTrailRetentionYears":7,"fieldHistoryEnabled":true,"auditTrailExportRequired":true}</value>
