<CustomMetadata xmlns="http://soap.sforce.com/2006/04/metadata" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <label>GLBA Safeguards Rule</label>
    <protected>false</protected>
    <values>
        <field>Framework__c</field>
        <value xsi:type="xsd:string">GLBA</value>
    </values>
    <values>
        <field>Policy_Description__c</field>
        <value xsi:type="xsd:string">GLBA Safeguards Rule (16 CFR Part 314) requires financial institutions to implement safeguards to protect customer information. Access controls, encryption, and monitoring must be in place to protect nonpublic personal information.</value>
    </values>
    <values>
        <field>Legal_Citation__c</field>
        <value xsi:type="xsd:string">GLBA Safeguards Rule 16 CFR Part 314 - Standards for Safeguarding Customer Information</value>
    </values>
    <values>
        <field>Remediation_Steps__c</field>
        <value xsi:type="xsd:string">1. Implement access controls to restrict access to customer information.
2. Enable encryption for customer data at rest and in transit.
3. Monitor access to customer information and detect unauthorized access.
4. Conduct periodic risk assessments of information security controls.
5. Train staff on GLBA Safeguards Rule requirements.</value>
    </values>
    <values>
        <field>Risk_Weight__c</field>
        <value xsi:type="xsd:double">8.5</value>
    </values>
    <values>
        <field>Entity_Types__c</field>
        <value xsi:type="xsd:string">PERMISSION_SET,ENCRYPTION,EVENT_MONITORING</value>
    </values>
    <values>
        <field>Auto_Remediation_Allowed__c</field>
        <value xsi:type="xsd:boolean">false</value>
    </values>
    <values>
        <field>Severity__c</field>
        <value xsi:type="xsd:string">HIGH</value>
    </values>
    <values>
        <field>Detection_Pattern__c</field>
        <value xsi:type="xsd:string">{"safeguardsRequired":true,"encryptionRequired":true,"accessControlsRequired":true,"monitoringRequired":true}</value>
    </values>
    <values>
        <field>Is_Active__c</field>
        <value xsi:type="xsd:boolean">true</value>
    </values>
</CustomMetadata>
