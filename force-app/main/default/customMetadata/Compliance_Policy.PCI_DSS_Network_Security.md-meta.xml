        <value xsi:type="xsd:string">HIGH</value>
    </values>
    <values>
        <field>Detection_Pattern__c</field>
        <value xsi:type="xsd:string">{"networkSecurityRequired":true,"ipRestrictionsRequired":true,"mfaRequired":true,"sessionTimeoutMinutes":15}</value>
