        <field>Auto_Remediation_Allowed__c</field>
        <value xsi:type="xsd:boolean">false</value>
    </values>
    <values>
        <field>Severity__c</field>
        <value xsi:type="xsd:string">HIGH</value>
    </values>
    <values>
        <field>Detection_Pattern__c</field>
        <value xsi:type="xsd:string">{"riskManagementProcessRequired":true,"riskAssessmentRequired":true,"riskRegisterRequired":true}</value>
    </values>
    <values>
