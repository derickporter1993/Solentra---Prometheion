    <label>CCPA Right to Delete</label>
    <protected>false</protected>
    <values>
        <field>Framework__c</field>
        <value xsi:type="xsd:string">CCPA</value>
    </values>
    <values>
        <field>Policy_Description__c</field>
        <value xsi:type="xsd:string">Consumers have the right to request deletion of their personal information. Businesses must delete personal information upon verifiable consumer request, with limited exceptions.</value>
    </values>
    <values>
        <field>Legal_Citation__c</field>
        <value xsi:type="xsd:string">CCPA Section 1798.105(a)</value>
    </values>
    <values>
        <field>Remediation_Steps__c</field>
        <value xsi:type="xsd:string">1. Implement data deletion workflows
2. Create automated deletion process for consumer requests
3. Document exceptions (legal hold, ongoing transactions)
4. Verify consumer identity before deletion
5. Maintain audit trail of deletion requests</value>
    </values>
    <values>
        <field>Risk_Weight__c</field>
        <value xsi:type="xsd:double">9.0</value>
    </values>
    <values>
        <field>Entity_Types__c</field>
        <value xsi:type="xsd:string">CUSTOM_OBJECT,FLOW,APEX_CLASS</value>
    </values>
    <values>
        <field>Auto_Remediation_Allowed__c</field>
        <value xsi:type="xsd:boolean">true</value>
    </values>
    <values>
        <field>Severity__c</field>
        <value xsi:type="xsd:string">CRITICAL</value>
    </values>
    <values>
        <field>Detection_Pattern__c</field>
        <value xsi:type="xsd:string">{"pattern": "deletion_workflow", "required": ["verification", "audit_trail"], "threshold": 1}</value>
    </values>
    <values>
        <field>Is_Active__c</field>
        <value xsi:type="xsd:boolean">true</value>
    </values>
