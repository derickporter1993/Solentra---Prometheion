        <field>Severity__c</field>
        <value xsi:type="xsd:string">HIGH</value>
    </values>
    <values>
        <field>Detection_Pattern__c</field>
        <value xsi:type="xsd:string">{"segregationViolations":["EditFinancial+ApproveFinancial","CreateUser+ModifyPermissions"],"staleThresholdDays":90}</value>
