    </values>
    <values>
        <field>Severity__c</field>
        <value xsi:type="xsd:string">HIGH</value>
    </values>
    <values>
        <field>Detection_Pattern__c</field>
        <value xsi:type="xsd:string">{"pattern": "discrimination_check", "fields": ["pricing", "service_quality"], "threshold": 0}</value>
