    <label>CCPA Non-Discrimination</label>
    <protected>false</protected>
    <values>
        <field>Framework__c</field>
        <value xsi:type="xsd:string">CCPA</value>
    </values>
    <values>
        <field>Policy_Description__c</field>
        <value xsi:type="xsd:string">Businesses cannot discriminate against consumers who exercise their CCPA rights. This includes denying goods/services, charging different prices, or providing different quality of service.</value>
    </values>
    <values>
        <field>Legal_Citation__c</field>
        <value xsi:type="xsd:string">CCPA Section 1798.125(a)</value>
    </values>
    <values>
        <field>Remediation_Steps__c</field>
        <value xsi:type="xsd:string">1. Review pricing and service policies
2. Ensure equal treatment regardless of privacy choices
3. Document business justification for any differential treatment
4. Train staff on non-discrimination requirements
5. Monitor for discriminatory practices</value>
    </values>
    <values>
        <field>Risk_Weight__c</field>
        <value xsi:type="xsd:double">7.0</value>
    </values>
