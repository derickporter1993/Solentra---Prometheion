<apex:page standardController="Elaro_Audit_Package__c" 
           extensions="ElaroPDFController"
           renderAs="pdf" 
           showHeader="false" 
           sidebar="false"
           applyBodyTag="false"
           applyHtmlTag="false">
<html>
<head>
    <style type="text/css">
        @page {
            size: letter;
            margin: 0.75in;
            @top-center {
                content: "CONFIDENTIAL - AUDIT DOCUMENTATION";
                font-size: 9pt;
                color: #666;
            }
            @bottom-center {
                content: "Page " counter(page) " of " counter(pages);
                font-size: 9pt;
            }
        }
        
        body {
            font-family: 'Arial', 'Helvetica', sans-serif;
            font-size: 10pt;
            color: #333;
            line-height: 1.4;
        }
        
        .header {
            background-color: #032d60;
            color: white;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .header h1 {
            margin: 0;
            font-size: 24pt;
        }
        
        .header .subtitle {
            font-size: 12pt;
            margin-top: 5px;
            opacity: 0.9;
        }
        
        .section {
            margin-bottom: 20px;
        }
        
        .section-title {
            font-size: 14pt;
            font-weight: bold;
            color: #032d60;
            border-bottom: 2px solid #032d60;
            padding-bottom: 5px;
            margin-bottom: 10px;
        }
        
        .summary-box {
            background-color: #f5f5f5;
            padding: 15px;
            border-left: 4px solid #032d60;
            margin-bottom: 20px;
        }
        
        .metrics {
            display: table;
            width: 100%;
        }
        
        .metric {
            display: table-cell;
            text-align: center;
            padding: 10px;
            width: 25%;
        }
        
        .metric-value {
            font-size: 24pt;
            font-weight: bold;
            color: #032d60;
        }
        
        .metric-label {
            font-size: 9pt;
            color: #666;
            text-transform: uppercase;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
        }
        
        th {
            background-color: #032d60;
            color: white;
            padding: 8px;
            text-align: left;
            font-size: 9pt;
        }
        
        td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            font-size: 9pt;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        
        .risk-critical { color: #c23934; font-weight: bold; }
        .risk-high { color: #e87722; font-weight: bold; }
        .risk-medium { color: #f7b924; }
        .risk-low { color: #4bca81; }
        
        .signature-block {
            margin-top: 40px;
            page-break-inside: avoid;
        }
        
        .signature-line {
            border-bottom: 1px solid #333;
            width: 200px;
            display: inline-block;
            margin-right: 50px;
        }
        
        .hash-block {
            background-color: #f0f0f0;
            padding: 10px;
            font-family: 'Courier New', monospace;
            font-size: 8pt;
            word-break: break-all;
            margin-top: 20px;
        }
        
        .footer {
            margin-top: 30px;
            font-size: 8pt;
            color: #666;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1>Audit Package Report</h1>
        <div class="subtitle">{!auditPackage.Framework__c} Compliance Audit</div>
    </div>
    
    <!-- Summary Box -->
    <div class="summary-box">
        <table>
            <tr>
                <td><strong>Package Name:</strong></td>
                <td>{!auditPackage.Package_Name__c}</td>
                <td><strong>Framework:</strong></td>
                <td>{!auditPackage.Framework__c}</td>
            </tr>
            <tr>
                <td><strong>Audit Period:</strong></td>
                <td>{!dateRange}</td>
                <td><strong>Status:</strong></td>
                <td>{!auditPackage.Status__c}</td>
            </tr>
            <tr>
                <td><strong>Generated:</strong></td>
                <td><apex:outputText value="{0,date,MM/dd/yyyy HH:mm}">
                    <apex:param value="{!generatedAt}"/>
                </apex:outputText></td>
                <td><strong>Generated By:</strong></td>
                <td>{!generatedBy}</td>
            </tr>
        </table>
    </div>
    
    <!-- Metrics -->
    <div class="section">
        <div class="section-title">Compliance Metrics</div>
        <div class="metrics">
            <div class="metric">
                <div class="metric-value">{!complianceScore}%</div>
                <div class="metric-label">Compliance Score</div>
            </div>
            <div class="metric">
                <div class="metric-value">{!evidenceCount}</div>
                <div class="metric-label">Total Evidence</div>
            </div>
            <div class="metric">
                <div class="metric-value risk-critical">{!criticalCount}</div>
                <div class="metric-label">Critical Events</div>
            </div>
            <div class="metric">
                <div class="metric-value risk-high">{!highCount}</div>
                <div class="metric-label">High Risk Events</div>
            </div>
        </div>
    </div>
    
    <!-- Control Summary -->
    <div class="section">
        <div class="section-title">Control Coverage Summary</div>
        <table>
            <thead>
                <tr>
                    <th>Control/Event Type</th>
                    <th>Description</th>
                    <th>Evidence Count</th>
                    <th>Risk Level</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!controlSummary}" var="cs">
                    <tr>
                        <td>{!cs.controlId}</td>
                        <td>{!cs.controlName}</td>
                        <td>{!cs.evidenceCount}</td>
                        <td class="{!getRiskColorClass(cs.riskLevel)}">{!cs.riskLevel}</td>
                        <td>{!cs.status}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>
    </div>
    
    <!-- Evidence Summary (first 50 items) -->
    <div class="section">
        <div class="section-title">Evidence Items (Sample)</div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!evidenceItems}" var="item" rows="50">
                    <tr>
                        <td>{!item.Name}</td>
                        <td>{!item.Evidence_Type__c}</td>
                        <td><apex:outputText value="{0,date,MM/dd/yyyy}">
                            <apex:param value="{!item.Evidence_Date__c}"/>
                        </apex:outputText></td>
                        <td>{!LEFT(item.Description__c, 50)}</td>
                        <td>{!item.Status__c}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>
        <apex:outputPanel rendered="{!evidenceCount > 50}">
            <p><em>Showing first 50 of {!evidenceCount} evidence items. See full evidence report for complete listing.</em></p>
        </apex:outputPanel>
    </div>
    
    <!-- Signature Block -->
    <div class="signature-block">
        <div class="section-title">Certification</div>
        <p>This audit package has been reviewed and certified as accurate and complete.</p>
        <br/><br/>
        <div>
            <span class="signature-line">&nbsp;</span>
            <span class="signature-line">&nbsp;</span>
        </div>
        <div>
            <span style="margin-right: 140px;">Prepared By</span>
            <span>Reviewed By</span>
        </div>
        <br/>
        <div>
            <span class="signature-line">&nbsp;</span>
            <span class="signature-line">&nbsp;</span>
        </div>
        <div>
            <span style="margin-right: 160px;">Date</span>
            <span>Date</span>
        </div>
    </div>
    
    <!-- Document Hash -->
    <div class="hash-block">
        <strong>Document Integrity Hash (SHA-256):</strong><br/>
        {!documentHash}
    </div>
    
    <!-- Footer -->
    <div class="footer">
        <p>This document was generated by Elaro Compliance Platform on 
           <apex:outputText value="{0,date,MMMM d, yyyy 'at' HH:mm z}">
               <apex:param value="{!generatedAt}"/>
           </apex:outputText>.
           For questions regarding this audit package, contact your compliance team.</p>
    </div>
</body>
</html>
</apex:page>
