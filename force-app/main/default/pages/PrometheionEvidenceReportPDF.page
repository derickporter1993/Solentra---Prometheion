<apex:page standardController="Prometheion_Audit_Package__c" 
           extensions="PrometheionPDFController"
           renderAs="pdf" 
           showHeader="false" 
           sidebar="false"
           applyBodyTag="false"
           applyHtmlTag="false">
<html>
<head>
    <style type="text/css">
        @page {
            size: letter;
            margin: 0.5in;
            @top-center {
                content: "CONFIDENTIAL - DETAILED EVIDENCE REPORT";
                font-size: 8pt;
                color: #666;
            }
            @bottom-center {
                content: "Page " counter(page) " of " counter(pages);
                font-size: 8pt;
            }
        }
        
        body {
            font-family: 'Arial', 'Helvetica', sans-serif;
            font-size: 9pt;
            color: #333;
            line-height: 1.3;
        }
        
        .header {
            background-color: #032d60;
            color: white;
            padding: 15px;
            margin-bottom: 15px;
        }
        
        .header h1 {
            margin: 0;
            font-size: 18pt;
        }
        
        .header .info {
            font-size: 9pt;
            margin-top: 5px;
        }
        
        .section {
            margin-bottom: 15px;
        }
        
        .section-title {
            font-size: 12pt;
            font-weight: bold;
            color: #032d60;
            border-bottom: 1px solid #032d60;
            padding-bottom: 3px;
            margin-bottom: 8px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 8pt;
        }
        
        th {
            background-color: #032d60;
            color: white;
            padding: 6px;
            text-align: left;
        }
        
        td {
            padding: 5px;
            border-bottom: 1px solid #eee;
            vertical-align: top;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        
        .risk-critical { 
            background-color: #f8d7da !important; 
            color: #c23934; 
            font-weight: bold; 
        }
        .risk-high { 
            background-color: #fff3cd !important; 
            color: #856404; 
        }
        .risk-medium { 
            background-color: #fff9e6 !important; 
        }
        .risk-low { 
            background-color: #d4edda !important; 
        }
        
        .summary-table {
            margin-bottom: 15px;
        }
        
        .summary-table td {
            padding: 8px;
            border: 1px solid #ddd;
        }
        
        .summary-table .label {
            background-color: #f5f5f5;
            font-weight: bold;
            width: 150px;
        }
        
        .hash-footer {
            margin-top: 20px;
            padding: 10px;
            background-color: #f0f0f0;
            font-family: 'Courier New', monospace;
            font-size: 7pt;
            word-break: break-all;
        }
        
        .page-break {
            page-break-before: always;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1>Detailed Evidence Report</h1>
        <div class="info">
            {!auditPackage.Package_Name__c} | {!auditPackage.Framework__c} | 
            Generated: <apex:outputText value="{0,date,MM/dd/yyyy HH:mm}">
                <apex:param value="{!generatedAt}"/>
            </apex:outputText>
        </div>
    </div>
    
    <!-- Summary -->
    <div class="section">
        <div class="section-title">Report Summary</div>
        <table class="summary-table">
            <tr>
                <td class="label">Package Name</td>
                <td>{!auditPackage.Package_Name__c}</td>
                <td class="label">Framework</td>
                <td>{!auditPackage.Framework__c}</td>
            </tr>
            <tr>
                <td class="label">Audit Period</td>
                <td>{!dateRange}</td>
                <td class="label">Total Evidence</td>
                <td>{!evidenceCount} items</td>
            </tr>
            <tr>
                <td class="label">Critical Events</td>
                <td style="color: #c23934; font-weight: bold;">{!criticalCount}</td>
                <td class="label">High Risk Events</td>
                <td style="color: #856404; font-weight: bold;">{!highCount}</td>
            </tr>
            <tr>
                <td class="label">Compliance Score</td>
                <td colspan="3" style="font-size: 14pt; font-weight: bold; color: #032d60;">
                    {!complianceScore}%
                </td>
            </tr>
        </table>
    </div>
    
    <!-- Control Summary -->
    <div class="section">
        <div class="section-title">Control Coverage Matrix</div>
        <table>
            <thead>
                <tr>
                    <th style="width: 15%;">Control ID</th>
                    <th style="width: 30%;">Control Name</th>
                    <th style="width: 15%;">Evidence Count</th>
                    <th style="width: 15%;">Risk Level</th>
                    <th style="width: 25%;">Status</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!controlSummary}" var="cs">
                    <tr class="{!IF(cs.riskLevel == 'CRITICAL', 'risk-critical', 
                                IF(cs.riskLevel == 'HIGH', 'risk-high',
                                IF(cs.riskLevel == 'MEDIUM', 'risk-medium', 'risk-low')))}">
                        <td>{!cs.controlId}</td>
                        <td>{!cs.controlName}</td>
                        <td style="text-align: center;">{!cs.evidenceCount}</td>
                        <td>{!cs.riskLevel}</td>
                        <td>{!cs.status}</td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>
    </div>
    
    <!-- Detailed Evidence Listing -->
    <div class="section page-break">
        <div class="section-title">Complete Evidence Listing</div>
        <table>
            <thead>
                <tr>
                    <th style="width: 12%;">Evidence ID</th>
                    <th style="width: 12%;">Type</th>
                    <th style="width: 10%;">Date</th>
                    <th style="width: 40%;">Description</th>
                    <th style="width: 10%;">Status</th>
                    <th style="width: 16%;">Created</th>
                </tr>
            </thead>
            <tbody>
                <apex:repeat value="{!evidenceItems}" var="item">
                    <tr>
                        <td>{!item.Name}</td>
                        <td>{!item.Evidence_Type__c}</td>
                        <td><apex:outputText value="{0,date,MM/dd/yy}">
                            <apex:param value="{!item.Evidence_Date__c}"/>
                        </apex:outputText></td>
                        <td>{!item.Description__c}</td>
                        <td>{!item.Status__c}</td>
                        <td><apex:outputText value="{0,date,MM/dd/yy HH:mm}">
                            <apex:param value="{!item.CreatedDate}"/>
                        </apex:outputText></td>
                    </tr>
                </apex:repeat>
            </tbody>
        </table>
        
        <apex:outputPanel rendered="{!evidenceCount == 0}">
            <p style="text-align: center; color: #666; padding: 20px;">
                No evidence items found for this audit package.
            </p>
        </apex:outputPanel>
    </div>
    
    <!-- Document Integrity -->
    <div class="hash-footer">
        <strong>Document Integrity Verification</strong><br/>
        SHA-256 Hash: {!documentHash}<br/>
        Generated: <apex:outputText value="{0,date,yyyy-MM-dd'T'HH:mm:ss'Z'}">
            <apex:param value="{!generatedAt}"/>
        </apex:outputText><br/>
        Generated By: {!generatedBy}
    </div>
</body>
</html>
</apex:page>
